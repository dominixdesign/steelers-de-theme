<?php
$filedata = file_get_contents(__DIR__ . '/../../src/shopdata.json');
if($filedata) :
	$data = json_decode($filedata);
	$jsondata = [];
	foreach($data as $product):
		$jsondata[] = [
			'name' => $product->name,
			'link' => $product->permalink,
			'image' => $product->images[0]->src,
		];
	endforeach;
?>
  <script>
  window.steelers_shopdata = <?= json_encode($jsondata, JSON_PRETTY_PRINT) ?>;
  </script>
<div id="homeshop"></div>
<?php endif; ?>